@model IEnumerable<MVCLibrary.ViewModels.BookToShowViewModel>

@{
    ViewBag.Title = "SearchBooks";
}

<div class="text-center">
    <h3>Wyszukane książki</h3>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountBooks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BooksInLibrary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountBooks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksInLibrary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Dodaj do koszyka", "AddProductToCart", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
