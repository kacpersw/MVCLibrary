@model MVCLibrary.ViewModels.BookViewModel

@{
    ViewBag.Title = "AddBook";
}

<div class="text-center">
    <h2>Dodaj książkę</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <h4>Książka</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center">
            @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "text-center" })<br/>
            <div class="text-center">
                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(model => model.CountBooks, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.CountBooks, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.CountBooks, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(m => m.Categories, new { @class = "text-center" })<br />
            <div class="">
                @Html.DropDownList("CategoryId", Model.Categories, "Wybierz")
            </div>
        </div>
        <br />
        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Dodaj książkę" class="btn btn-success" />
            </div>
        </div>
    </div>
}