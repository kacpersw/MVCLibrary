@model IEnumerable<MVCLibrary.ViewModels.BorrowViewModel>

@{
    ViewBag.Title = "ReturnBook";
}

<div class="text-center">
    <h3>Wypożyczenia</h3>
</div>
@if (Model != null && Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowState)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowState)
                </td>
                <td>
                    @Html.ActionLink("Oddano", "UserReturnedBook", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    </table>

}
else
{
    <div class="text-center">
        <span>Brak wypożyczeń</span>
    </div>
}