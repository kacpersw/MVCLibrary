@model MVCLibrary.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "AddCategory";
}

<div class="text-center">
    <h3>Dodaj kategorię</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <h4>Kategoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "text-center" })<br/>
            <div class="text-center">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "text-center" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(m => m.Parents, new { @class = "control-label" })<br />
            <div class="">
                @Html.DropDownList("ParentId", Model.Parents, "Wybierz")
            </div>
        </div>
        <br />
        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Dodaj kategorię" class="btn btn-success" />
            </div>
        </div>
    </div>
}
