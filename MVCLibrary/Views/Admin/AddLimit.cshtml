@model MVCLibrary.Models.Limit

@{
    ViewBag.Title = "AddLimit";
}

<div class="text-center">
    <h3>Zmień limit wypożyczonych książek</h3>
</div>
<br/>
<div class="text-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center">
            <h4>Limit</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="text-center">
                    @Html.EditorFor(model => model.CountOfBooks, new { htmlAttributes = new { @class = "text-center" } })
                    @Html.ValidationMessageFor(model => model.CountOfBooks, "", new { @class = "text-danger" })
                </div>
            </div>
            <br/>
            
            <div class="text-center">
                <div class="text-center">
                    <input type="submit" value="Zmień limit" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>