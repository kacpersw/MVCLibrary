@model MVCLibrary.Models.AdminMessage

@{
    ViewBag.Title = "AddMessage";
}
<div class="text-center">
    <h3>Dodaj wiadomość</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <h4>Wiadomość</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center">
            <label>Tytuł</label>
            <div class="text-center">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "text-center edittext-width" } })<br/>
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>

        <div class="text-center">
            <label>Treść</label>
            <div class="">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "edittext-width edittext-height" } })<br />
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>

        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Dodaj wiadomość" class="btn btn-success" />
            </div>
        </div>
    </div>
}

